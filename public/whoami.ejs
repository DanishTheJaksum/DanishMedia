      .mosh-mosh {
        position: relative;
        padding: 20px;
        background-image: url("./src/repeating.jpg");
        background-size: contain;
        border-radius: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        color: rgb(
          255,
          255,
          255
        ); /* Set the text color to white for better visibility */
      }

      .mosh-mosh::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(
          0,
          0,
          0,
          0.8
        ); /* Adjust the alpha value to control the darkness */
        border-radius: 20px;
      }

      .mosh-mosh img,
      .mosh-mosh h1,
      .mosh-mosh h6 {
        position: relative;
        z-index: 1; /* Set the z-index to bring the content above the dark layer */
      }

      .mosh-mosh img {
        max-width: 200px;
        border-radius: 20%;
        margin: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        order: 1; /* This property changes the order of the image within the flex container */
      }

      .mosh-mosh h1,
      .mosh-mosh h6 {
        text-align: center;
        order: 2; /* This property changes the order of the text within the flex container */
      }

      .web-card {
        margin: 10px 0;
        width: 350px;
        height: 500px;
        border-radius: 20px;
        box-shadow: 0 0 7px 0.5px rgba(0, 0, 0, 0.2);
